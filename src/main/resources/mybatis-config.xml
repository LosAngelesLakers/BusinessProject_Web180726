<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="jdbc.properties"/>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    <environments default="development">
        <environment id="development">
            <!--  将事务交给JDBC -->
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}" />
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="com/neuedu/Mapper/UserMapper.xml"  />
        <mapper resource="com/neuedu/Mapper/ProductMapper.xml"  />
        <mapper resource="com/neuedu/Mapper/AccountMapper.xml"  />
        <mapper resource="com/neuedu/Mapper/CartMapper.xml"  />
        <mapper resource="com/neuedu/Mapper/CategoryMapper.xml"  />
        <mapper resource="com/neuedu/Mapper/UserOrderMapper.xml"  />
    </mappers>




</configuration>


